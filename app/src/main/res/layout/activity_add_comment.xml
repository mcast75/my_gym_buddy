<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="android.bignerdranch.com.fourredd.CreateThread">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:weightSum="1000"
            android:layout_marginBottom="25dp">
            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Comment"
                android:textSize="36dp"
                android:textColor="@android:color/holo_orange_light"
                android:textStyle="bold"
                android:layout_weight="999"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thread:"
                android:textSize="30dp"
                android:textColor="@android:color/holo_orange_light"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/threadTitle"
                android:inputType="textMultiLine"
                android:textColor="@android:color/holo_orange_light"
                android:lines="2"
                android:minLines="1"
                android:gravity="top|left"
                android:maxLength="64"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical"
                android:textSize="28dp"
                android:layout_marginBottom="48dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_orange_light"
                android:text="Comment"
                android:textSize="30dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:textColor="@android:color/white"
                android:id="@+id/commentPost"
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="8"
                android:minLines="1"
                android:gravity="top|left"
                android:maxLength="256"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical"
                android:textSize="28dp" />



            <TextView
                android:layout_marginTop="150dp"
                android:id="@+id/makeComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="28dp"
                android:text="> Publish My Comment!"
                android:clickable="true"
                android:imeOptions="actionNext"
                android:singleLine="false"/>


            <TextView
                android:textColor="@android:color/holo_orange_light"
                android:layout_marginTop="50dp"
                android:id="@+id/cancelComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:text="> Forget It! Don't Post This."
                android:clickable="true"
                android:imeOptions="actionDone"/>



        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"

            android:src="@drawable/icon2"
            android:layout_gravity="bottom"

            android:scaleType="centerCrop"/>


    </LinearLayout>







    </LinearLayout>




</RelativeLayout>
